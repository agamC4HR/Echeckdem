@model Echeckdem.CustomFolder.ReturnPeriodSelectionViewModel

<h3>Select Return Period</h3>

<form asp-action="FetchApplicableReturns" method="post">
    @Html.HiddenFor(m => m.Oid)
    @Html.HiddenFor(m => m.Lcode)
    @Html.HiddenFor(m => m.Lstate)
    @Html.HiddenFor(m => m.Ltype)
    @Html.HiddenFor(m => m.Iscloc)

 
    <div class="form-group mb-2">
        <label for="Month">Return Month:</label>
        <input type="number" name="Month" class="form-control" min="1" max="12" required />
    </div>
    <div class="form-group mb-3">
        <label for="Year">Return Year:</label>
        <input type="number" name="Year" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Fetch Returns</button>
</form>
