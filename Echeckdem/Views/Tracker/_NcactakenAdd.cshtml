@model Echeckdem.ViewModel.OnGoingActivity.AddNcactaken

<style>
     .DetailsSection_Child_2{
        background: white;
        padding: 15px;
        width: 100%;
        border-radius: .375rem;
        border: 2px solid red;
    }

         .DetailsSection_Child_2.heading {
            font-size: 14px;
            font-weight: bold;
            text-transform: uppercase;
        }
</style>


<div class="DetailsSection_Child_2">
    <div class="heading">Add New Update</div>
    <form id="ncactionTakenForm" method="post" asp-action="SaveNcActTaken" asp-controller="Tracker" style="margin-top:10px;">
        <input type="hidden" id="AcidNcActTaken" asp-for="Acid" />
        



        <div class="form-row-2col">
            <div class="form-group">
                <label for="Acdate">Date of Action:</label>
                <input type="date" asp-for="Acdate" required />
            </div>
            <div class="form-group">
                <label for="Nacdate">Estimated Date of Next Action:</label>
                <input type="date" class="form-control" asp-for="Nacdate" required />
            </div>
            
        </div>
        <div class="form-row-2col">
            
            <div class="form-group">
                <label for="Actaken">Action Taken:</label>
                <textarea class="form-control" asp-for="Actaken" required></textarea>
            </div>
            
        </div>

        <button type="submit" class="saveButton">Save</button>
    </form>
</div>
