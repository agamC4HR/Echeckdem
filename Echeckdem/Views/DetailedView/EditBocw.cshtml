@model Echeckdem.CustomFolder.BOCWEditViewModel

@{
    ViewData["Title"] = "BOCW Recordt";
    ViewData["Heading"] = "Edit BOCW Record";
    ViewData["Heading_child"] = "...";
}

<style>
    .Parent_Container {
        display: flex;
        flex-direction: column;
        width: 98vw;
    }

    .Child_Container {
        display: flex;
        width: 100%;
        gap:15px;
    }

    .NCBOCW_Information, .NCACTION_Details, .NCACTAKEN_Action {
        width: 50%;
        background: white;
        border: 2px solid red;
        border-radius: .375rem;
        padding: 15px;
        margin-top: 45px;
        margin-left: 7px;
    }

    .NCACTAKEN_Action{
        width: 100%;
        margin-top:15px;
    }

    .form-row-2col {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 15px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #333;
            font-size: 12px;
        }

    .form-control {
        font-size: 12px;
        border: 1px solid #ccc;
        border-radius: .375rem;
        outline: none;
        transition: border-color 0.2s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.2);
        }
        .heading{
            margin-bottom:10px;
        }
        .saveButton{
            width:140px;
        }
</style>

<form asp-action="AddorUpdateBocw" asp-controller="DetailsView" method="post" enctype="multipart/form-data">

    @Html.HiddenFor(m => m.TransactionID)
    @Html.HiddenFor(m => m.LCode)
    @Html.HiddenFor(m => m.ACID)

    <div class="Parent_Container">
        <div class="Child_Container">
    <!-- NCBOCW Section -->
            <fieldset class="NCBOCW_Information">
        <div class="heading">NCBOCW Information</div>

                <div class="form-row-2col">
                    <div class="form-group" style="grid-column: 1 / -1; width: 100%;">
            <label>Title</label>
            <input class="form-control" value="@Model?.ACTitle" readonly style="cursor:pointer;" />
        </div>
        </div>

                <div class="form-row-2col">
                    <div class="form-group" style="grid-column: 1 / -1; width: 100%;">
            <label>Status</label>
            @Html.DropDownListFor(m => m.Status, Model.AvailableStatuses, "Select Status", new { @class = "form-control" })
        </div>
                </div>
                <div class="form-row-2col">
                    <div class="form-group" style="grid-column: 1 / -1; width: 100%;">
            <label>Due Date</label>
                        <input class="form-control" value="@Model?.DueDate.ToString("dd-MMM-yyyy")" readonly />
        </div>
        </div>

                <div class="form-row-2col">
                    <div class="form-group" style="grid-column: 1 / -1; width: 100%;">
            <label>Completion Date</label>
            @Html.TextBoxFor(m => m.CompletionDate, new { @class = "form-control", type = "date" })
        </div>
        </div>

        <button type="submit" name="submitType" value="SaveNCBOCW" class="saveButton">Save NCBOCW Info</button>
    </fieldset>

    <!-- NCACTION Section -->
            <fieldset class="NCACTION_Details">
                <div class="heading">NCACTION Details</div>

                <div class="form-row-2col">
                    <div class="form-group" style="grid-column: 1 / -1; width: 100%;">
            <label>Detail of Issue</label>
            @Html.TextAreaFor(m => m.ACDetail, new { @class = "form-control" })
        </div>
        </div>
                <div class="form-row-2col">
                <div class="form-group">
            <label>Start Date of Issue</label>
            <input class="form-control" value="@Model?.ACIDate?.ToString("yyyy-MM-dd")" readonly />
        </div>

                <div class="form-group">
            <label>Visible to Client</label>
            @Html.DropDownListFor(m => m.ACShow, new SelectList(new[] {
            new { Text = "No", Value = 0 },
            new { Text = "Yes", Value = 1 }
            }, "Value", "Text", Model?.ACShow), new { @class = "form-control" })
        </div>
        </div>

                <div class="form-row-2col">
                    <div class="form-group" style="grid-column: 1 / -1; width: 100%;">
            <label>Remarks</label>
            @Html.TextAreaFor(m => m.ACRemarks, new { @class = "form-control" })
        </div>
        </div>

                <div class="form-row-2col">
                    <div class="form-group" style="grid-column: 1 / -1; width: 100%;">
            <label>Upload File</label>
            <input type="file" name="UploadedFile" class="form-control" />
        </div>
        </div>

        <button type="submit" name="submitType" value="SaveNCACTION" class="saveButton">Save NCACTION Info</button>
    </fieldset>
        </div>
    <!-- NCACTAKEN Section -->
        <fieldset class="NCACTAKEN_Action">
            <div class="heading">NCACTAKEN - Action Taken</div>

            <div class="form-row-2col">
                <div class="form-group" style="grid-column: 1 / -1; width: 100%;">
            <label>Details of Action Taken</label>
            @Html.TextAreaFor(m => m.ActionTaken, new { @class = "form-control" })
        </div>
        </div>

            <div class="form-row-2col">
            <div class="form-group">
            <label>Date of Action Taken</label>
            @Html.TextBoxFor(m => m.ActionDate, new { @class = "form-control", type = "date" })
        </div>

            <div class="form-group">
            <label>Date of Action Closed</label>
            @Html.TextBoxFor(m => m.ActionClosedDate, new { @class = "form-control", type = "date" })
        </div>
        </div>

            <div class="form-row-2col">
            <div class="form-group">
            <label>Visible to Client</label>
            @Html.DropDownListFor(m => m.ShowClient, new SelectList(new[] {
            new { Text = "No", Value = 0 },
            new { Text = "Yes", Value = 1 }
            }, "Value", "Text", Model?.ShowClient), new { @class = "form-control" })
        </div>
        </div>

        <button type="submit" name="submitType" value="SaveNCACTION" class="saveButton">Save Action Taken</button>
    </fieldset>
    </div>

</form>
