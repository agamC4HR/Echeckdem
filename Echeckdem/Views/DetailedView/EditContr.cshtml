@model Echeckdem.Models.ContributionViewModel

@{
    ViewData["Title"] = "Edit Category";
    ViewData["Heading"] = "Edit Contribution";
    ViewData["Heading_child"] = ".....";
}
<style>
    .view-pdf-link {
        color: #0066cc; /* Change to a color that contrasts with the background */
        text-decoration: none; /* Optional: remove underline */
        font-weight: bold; /* Optional: make the text bold */
    }

        .view-pdf-link:hover {
            color: #004d99; /* Change color on hover for better UX */
            text-decoration: underline; /* Add underline on hover for better interactivity */
        }
</style>
<form asp-action="AddOrUpdateContr" asp-controller="DetailsView" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="oid" />
    <input type="hidden" asp-for="Contid" />
    <input type="hidden" asp-for="Lcode" />

    <label>Status:</label>
    <select asp-for="Status" class="form-control" asp-items="Model.StatusOptions">
        <option value="">-- Select Status --</option>
    </select>

    <labael> Amount: </labael>
    <input type="text" asp-for="Amount" class="form-control" />

    <labael> CHQNO: </labael>
    <input type="text" asp-for="Chqno" class="form-control" />

    <label>CHQ DATE:</label>
    <input type="date" asp-for="chqdate" class="form-control" />

    <label>Last Date:</label>
    <input type="date" asp-for="LastDate" class="form-control" />

    <label>Date of Deposit:</label>
    <input type="date" asp-for="Depdate" class="form-control" />
    
    <label>Remarks:</label>
    <textarea asp-for="Remarks" class="form-control"></textarea>

    <label>Upload File (PDF only):</label>
    <input type="file" name="file" class="form-control" accept="application/pdf" />

    @if (!string.IsNullOrEmpty(Model.Filename))
    {
        <div class="form-row">
            <div class="form-field" style="flex: 1 1 100%;">
                <label>Currently Uploaded File:</label><br />
                <a href="@Url.Action("Open_file", "DetailsView", new { tp = "CONTR", nm = Model.Filename, oid = Model.oid })"
                   target="_blank"
                   class="view-pdf-link">
                    View PDF in New Tab
                </a>
            </div>
        </div>
    }


    <div class="submit-button">
        <button type="submit">Save Changes</button>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
