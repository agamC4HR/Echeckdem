@model List<Echeckdem.Models.Maststate>
@{
    ViewData["Title"] = "State Template";
    var counts = ViewBag.ContributionCounts as Dictionary<string, int>;
}

<h2 class="mb-4">State Template</h2>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>State Name</th>
            <th>Status</th>
            <th>Cont</th>
            <th>Action</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var state in Model)
        {
            <tr>
                <td>@state.Statedesc</td>
                <td>@(state.Stactive == "1" ? "Active" : "Inactive")</td>
                <td>@(counts != null && counts.ContainsKey(state.Stateid) ? counts[state.Stateid] : 0)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@state.Stateid" class="btn btn-primary btn-sm">Contributions</a>
                </td>
            </tr>
        }
    </tbody>
</table>
