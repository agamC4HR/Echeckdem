@model Echeckdem.Models.Ncmlocbo

<style>

    .editNcmlocboForm {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 10px;
        padding: 5px;
        font-size: 12px;
    }

        .editNcmlocboForm label {
            font-weight: bold;
            color: #dd3432;
            padding-right: 10px;
        }

        .editNcmlocboForm input, .editNcmlocboForm select {
            padding: 5px;
            font-size: 12px;
            border: 1px solid #ddd;
            border-radius: .375rem;
        }

        .editNcmlocboForm button {
            padding: 5px;
            font-size: 12px;
            font-weight: bold;
            background-color: white;
            color: #dd3432;
            border: 2px solid #dd3432;
            height: 30px;
            border-radius: .375rem;
            width: 195px;
        }

            .editNcmlocboForm button:hover {
                background-color: #dd3432;
                color: white;
            }

    .form-buttons {
        grid-column: 1 / -1;
        display: flex;
        justify-content: flex-start;
        gap: 10px;
        margin-top: 10px;
    }
</style>

<div>
        <form class="editNcmlocboForm" id="editNcmlocboForm" method="post" action="/OrganisationSetup/UpdateNcmlocbo">
        <input type="hidden" name="Lcode" value="@Model.Lcode" />
        <input type="hidden" name="ProjectCode" value="@Model.ProjectCode" />

        <div>
            <label for="lname" class="form-label">Location Name</label>
            <input type="text" class="form-control" id="lname" name="lname" value="@Model.Lname" required />
        </div>

        <div>
            <label for="OvalId" class="form-label">OvalID</label>
            <input type="text" class="form-control" id="OvalId" name="OvalId" value="@Model.OvalId" required />
        </div>

        <div>
            <label for="ClientName" class="form-label">Client Name</label>
            <input type="text" class="form-control" id="ClientName" name="ClientName" value="@Model.ClientName" required />
        </div>

        <div>
            <label for="GeneralContractor" class="form-label">General Contractor</label>
            <input type="text" class="form-control" id="GeneralContractor" name="GeneralContractor" value="@Model.GeneralContractor" required />
        </div>

        <div>
            <label for="ProjectAddress" class="form-label">Project Address</label>
            <input type="text" class="form-control" id="ProjectAddress" name="ProjectAddress" value="@Model.GeneralContractor" required />
        </div>

        <div>
            <label for="NatureofWork" class="form-label">Nature of Work </label>
            <input type="text" class="form-control" id="NatureofWork" name="NatureofWork" value="@Model.NatureofWork" required />
        </div>

        <div>
            <label for="NatureofWork" class="form-label">Nature of Work </label>
            <input type="text" class="form-control" id="NatureofWork" name="NatureofWork" value="@Model.NatureofWork" required />
        </div>

        <div class="mb-3">
            <label for="ProjectArea" class="form-label">Project Area </label>
            <input type="text" class="form-control" id="ProjectArea" name="ProjectArea" value="@Model.ProjectArea" required />
        </div>

        <div>
            <label for="ProjectCostEst" class="form-label">Project Cost Est.</label>
            <input type="number" class="form-control" id="ProjectCostEst" name="ProjectCostEst" value="@Model.ProjectCostEst" step="0.01" />
        </div>
        <div class="mb-3">
            <label for="ProjectStartDateEst" class="form-label">Project Start Date</label>
            <input type="date" class="form-control" id="ProjectStartDateEst" name="ProjectStartDateEst" value="@Model.ProjectStartDateEst?.ToString("yyyy-MM-dd")" />
        </div>
        <div>
            <label for="ProjectEndDateEst" class="form-label">Project End Date</label>
            <input type="date" class="form-control" id="ProjectEndDateEst" name="ProjectEndDateEst" value="@Model.ProjectEndDateEst?.ToString("yyyy-MM-dd")" />
        </div>
        <div>
            <label for="VendorCount" class="form-label">Vendor Count</label>
            <input type="number" class="form-control" id="VendorCount" name="VendorCount" value="@Model.VendorCount" />
        </div>

        <div>
            <label for="WorkerHeadCount" class="form-label">Worker Head Count</label>
            <input type="number" class="form-control" id="WorkerHeadCount" name="WorkerHeadCount" value="@Model.WorkerHeadCount" />
        </div>

        <div>
            <label for="ProjectLead" class="form-label">Project Lead</label>
            <input type="text" class="form-control" id="ProjectLead" name="ProjectLead" value="@Model.ProjectLead" />
        </div>

@*         <div class="mb-3">
            <label for="ActiveScopes" class="form-label">Active Scopes </label>
            <input type="text" class="form-control" id="ActiveScopes" name="ActiveScopes" value="@Model.ActiveScopes" />
        </div> *@


        <div class="form-buttons">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <button type="button" class="close-btn">Cancel</button>
        </div>

    </form>
</div>