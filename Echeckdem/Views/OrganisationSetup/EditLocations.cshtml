@model Echeckdem.CustomFolder.CombinedOrganisationSetupViewModel

@{
    int currentYear = DateTime.Now.Year;
    int startYear = currentYear - 2;
    int endYear = currentYear + 2;
}

<style>
    .editLocationModal {
        display: none;
        position: relative;
        z-index: 1050;
        left: 0;
        top: 0;
        width: 96vw;
    }

