@model Echeckdem.Models.Ncuser

<form id="editUserForm" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Userid" />

    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" asp-for="Uname" required />
    </div>

    <div class="form-group">
        <label>Organization</label>
        <select class="form-control" asp-for="Oid" asp-items="ViewBag.Organizations"></select>
    </div>

    <div class="form-group">
        <label>User Level</label>
        <select class="form-control" asp-for="Userlevel" asp-items="ViewBag.UserLevels"></select>
    </div>

    <div class="form-group">
        <label>Active Status</label>
        <select class="form-control" asp-for="Uactive">
            <option value="1">Active</option>
            <option value="0">Inactive</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
</form>
