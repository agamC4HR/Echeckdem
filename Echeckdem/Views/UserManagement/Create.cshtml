@model Ncuser

<h2>Add User</h2>
<form asp-action="Create" method="post">
    <input type="hidden" name="Uactive" value="1" />

    <div class="form-group">
        <label>UserID</label>
        <input asp-for="Userid" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Username</label>
        <input asp-for="Uname" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>

    <div class="form-group">
        <label>User Level</label>
        <select asp-for="Userlevel" asp-items="ViewBag.UserLevels" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Organization</label>
        <select asp-for="Oid" asp-items="ViewBag.Organizations" class="form-control"></select>
    </div>

   @*  <div class="form-group">
        <label>Active</label>
        <input asp-for="Uactive" type="checkbox" value="true" />
    </div> *@

    <button type="submit" class="btn btn-success">Save</button>
</form>
